---
interface Props {
  src: string;
  title: string;
}

const { src, title } = Astro.props;
---

<div
  style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;"
>
  <iframe
    title={title}
    width="1200"
    height="675"
    style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
    src={src}
    allowfullscreen="true"
  >
  </iframe>
</div>
